        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    TreeNode* subtreeWithAllDeepest(TreeNode* root) {
        return dfs(root).first;
    }
    
private:
    // Returns {node, depth} where node is the LCA of deepest nodes at this depth
    pair&lt;TreeNode*, int&gt; dfs(TreeNode* node) {
        if (!node) {
            return {nullptr, 0};
        }
        
        auto left = dfs(node-&gt;left);
        auto right = dfs(node-&gt;right);
        
        int leftDepth = left.second;
        int rightDepth = right.second;
        
        if (leftDepth == rightDepth) {
            // Both subtrees have same depth, current node is LCA
            return {node, leftDepth + 1};
        } else if (leftDepth &gt; rightDepth) {
            // Deepest nodes are in left subtree
            return {left.first, leftDepth + 1};
        } else {
            // Deepest nodes are in right subtree
            return {right.first, rightDepth + 1};
        }
    }
};</code></pre>
