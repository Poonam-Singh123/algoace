        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">class Solution {
public:
    vector&lt;int&gt; maxTargetNodes(vector&lt;vector&lt;int&gt;&gt;&amp; edges1, vector&lt;vector&lt;int&gt;&gt;&amp; edges2) {
        int n = edges1.size() + 1;
        int m = edges2.size() + 1;
        
        // Build adjacency lists
        vector&lt;vector&lt;int&gt;&gt; graph1(n), graph2(m);
        for (auto&amp; e : edges1) {
            graph1[e[0]].push_back(e[1]);
            graph1[e[1]].push_back(e[0]);
        }
        for (auto&amp; e : edges2) {
            graph2[e[0]].push_back(e[1]);
            graph2[e[1]].push_back(e[0]);
        }
        
        // Color nodes in both trees (bipartite coloring)
        vector&lt;int&gt; color1 = bipartiteColor(graph1, n);
        vector&lt;int&gt; color2 = bipartiteColor(graph2, m);
        
        // Count nodes of each color in both trees
        int count1_0 = 0, count1_1 = 0;
        int count2_0 = 0, count2_1 = 0;
        
        for (int c : color1) {
            if (c == 0) count1_0++;
            else count1_1++;
        }
        
        for (int c : color2) {
            if (c == 0) count2_0++;
            else count2_1++;
        }
        
        // Maximum contribution from tree2
        int maxTree2 = max(count2_0, count2_1);
        
        vector&lt;int&gt; answer(n);
        for (int i = 0; i &lt; n; i++) {
            // Nodes in tree1 with even distance from i (same color as i)
            int sameColor = (color1[i] == 0) ? count1_0 : count1_1;
            answer[i] = sameColor + maxTree2;
        }
        
        return answer;
    }
    
private:
    vector&lt;int&gt; bipartiteColor(vector&lt;vector&lt;int&gt;&gt;&amp; graph, int n) {
        vector&lt;int&gt; color(n, -1);
        
        for (int i = 0; i &lt; n; i++) {
            if (color[i] == -1) {
                queue&lt;int&gt; q;
                q.push(i);
                color[i] = 0;
                
                while (!q.empty()) {
                    int u = q.front();
                    q.pop();
                    
                    for (int v : graph[u]) {
                        if (color[v] == -1) {
                            color[v] = 1 - color[u];
                            q.push(v);
                        }
                    }
                }
            }
        }
        
        return color;
    }
};</code></pre>
