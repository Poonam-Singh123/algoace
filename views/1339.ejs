        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int maxProduct(TreeNode* root) {
        const int MOD = 1e9 + 7;
        
        // First pass: calculate total sum
        totalSum = 0;
        calculateSum(root);
        
        // Second pass: find maximum product
        maxProd = 0;
        findMaxProduct(root);
        
        return maxProd % MOD;
    }
    
private:
    long long totalSum;
    long long maxProd;
    
    long long calculateSum(TreeNode* node) {
        if (!node) return 0;
        
        long long sum = node-&gt;val + calculateSum(node-&gt;left) + calculateSum(node-&gt;right);
        totalSum = sum;
        return sum;
    }
    
    long long findMaxProduct(TreeNode* node) {
        if (!node) return 0;
        
        long long leftSum = findMaxProduct(node-&gt;left);
        long long rightSum = findMaxProduct(node-&gt;right);
        long long subtreeSum = node-&gt;val + leftSum + rightSum;
        
        // Calculate product if we split at this node
        long long product = subtreeSum * (totalSum - subtreeSum);
        maxProd = max(maxProd, product);
        
        return subtreeSum;
    }
};</code></pre>
