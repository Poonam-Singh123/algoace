            <pre><code class="language-cpp">class Solution {
public:
    int intersectionSizeTwo(vector&lt;vector&lt;int&gt;&gt;&amp; iv) {
        // ans = total numbers added to satisfy every interval
        int ans = 0;
        // mx = largest chosen number, smx = second largest chosen number
        int mx = -1, smx = -1;
        // Sort by: increasing end, and if tie → decreasing start
        ranges::sort(iv, ranges::less{}, [](const vector&lt;int&gt;&amp; v) {
            return pair&lt;int,int&gt;{v[1], -v[0]};
        });
        for (auto &amp;v : iv) {
            int l = v[0], r = v[1];
            // If both chosen numbers lie inside the interval, we're already safe
            if (mx &gt;= l &amp;&amp; smx &gt;= l)
                continue;
            // If only the largest fits, add just one more
            if (mx &gt;= l) {
                smx = mx;   // shift mx down
                mx = r;     // add r as the new largest number
                ans += 1;
            } 
            else {
                // Neither mx nor smx fits → add two new numbers
                mx = r;        // take r
                smx = r - 1;   // also take r-1 (always safe due to sorting)
                ans += 2;
            }
        }
        return ans;
    }
};</code></pre>
