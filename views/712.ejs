        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">class Solution {
public:
    int minimumDeleteSum(string s1, string s2) {
        int m = s1.length();
        int n = s2.length();
        
        // dp[i][j] = min ASCII delete sum to make s1[0..i-1] equal to s2[0..j-1]
        vector&lt;vector&lt;int&gt;&gt; dp(m + 1, vector&lt;int&gt;(n + 1, 0));
        
        // Base case: delete all characters from s1
        for (int i = 1; i &lt;= m; i++) {
            dp[i][0] = dp[i - 1][0] + s1[i - 1];
        }
        
        // Base case: delete all characters from s2
        for (int j = 1; j &lt;= n; j++) {
            dp[0][j] = dp[0][j - 1] + s2[j - 1];
        }
        
        // Fill the DP table
        for (int i = 1; i &lt;= m; i++) {
            for (int j = 1; j &lt;= n; j++) {
                if (s1[i - 1] == s2[j - 1]) {
                    // Characters match, no deletion needed
                    dp[i][j] = dp[i - 1][j - 1];
                } else {
                    // Delete from s1 or s2, choose minimum
                    dp[i][j] = min(
                        dp[i - 1][j] + s1[i - 1],  // Delete from s1
                        dp[i][j - 1] + s2[j - 1]   // Delete from s2
                    );
                }
            }
        }
        
        return dp[m][n];
    }
};</code></pre>
