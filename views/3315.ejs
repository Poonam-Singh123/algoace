        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">class Solution {
public:
    vector&lt;int&gt; minBitwiseArray(vector&lt;int&gt;&amp; nums) {
        vector&lt;int&gt; ans;
        
        for (int num : nums) {
            if (num == 2) {
                // Special case: no solution for 2
                ans.push_back(-1);
                continue;
            }
            
            // Find the rightmost 0 bit in num
            // For ans | (ans + 1) = num to hold, we need to flip the rightmost
            // consecutive 1s in num to get ans
            
            // Find position of rightmost 0 bit
            int pos = 0;
            int temp = num;
            while ((temp &amp; 1) == 1) {
                temp &gt;&gt;= 1;
                pos++;
            }
            
            // Clear the bit at position (pos - 1) in num
            int result = num &amp; ~(1 &lt;&lt; (pos - 1));
            
            ans.push_back(result);
        }
        
        return ans;
    }
};</code></pre>
