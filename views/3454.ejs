        <button class="copy-button" onclick="copyCode(this)">Copy Code</button>

        <pre><code class="language-cpp">
#include &lt;bits/stdc++.h&gt;
using namespace std;

class Solution {
public:
    double separateSquares(vector&lt;vector&lt;int&gt;&gt;&amp; squares) {
        double low = 1e18, high = -1e18;
        
        for (auto &amp;s : squares) {
            double y = s[1];
            double side = s[2];
            low = min(low, y);
            high = max(high, y + side);
        }

        auto areaBelow = [&amp;](double mid) {
            double area = 0.0;
            for (auto &amp;s : squares) {
                double y = s[1];
                double side = s[2];
                double top = y + side;
                
                if (mid &lt;= y) continue;
                else if (mid &gt;= top) area += side * side;
                else area += side * (mid - y);
            }
            return area;
        };

        double total = 0.0;
        for (auto &amp;s : squares) {
            double side = s[2];
            total += side * side;
        }

        double left = low, right = high;
        for (int i = 0; i &lt; 80; i++) {
            double mid = (left + right) / 2.0;
            if (areaBelow(mid) * 2.0 &lt; total)
                left = mid;
            else
                right = mid;
        }

        return left;
    }
};
