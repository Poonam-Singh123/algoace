        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">class Solution {
public:
    int latestDayToCross(int row, int col, vector&lt;vector&lt;int&gt;&gt;&amp; cells) {
        int left = 1, right = cells.size();
        int result = 0;
        
        while (left &lt;= right) {
            int mid = left + (right - left) / 2;
            
            if (canCross(row, col, cells, mid)) {
                result = mid;
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }
        
        return result;
    }
    
private:
    bool canCross(int row, int col, vector&lt;vector&lt;int&gt;&gt;&amp; cells, int day) {
        // Create grid with water cells up to given day
        vector&lt;vector&lt;int&gt;&gt; grid(row, vector&lt;int&gt;(col, 0));
        
        for (int i = 0; i &lt; day; i++) {
            int r = cells[i][0] - 1;
            int c = cells[i][1] - 1;
            grid[r][c] = 1; // Mark as water
        }
        
        // BFS from top row to bottom row
        queue&lt;pair&lt;int, int&gt;&gt; q;
        vector&lt;vector&lt;bool&gt;&gt; visited(row, vector&lt;bool&gt;(col, false));
        
        // Start from all land cells in top row
        for (int c = 0; c &lt; col; c++) {
            if (grid[0][c] == 0) {
                q.push({0, c});
                visited[0][c] = true;
            }
        }
        
        int directions[4][2] = {{-1, 0}, {1, 0}, {0, -1}, {0, 1}};
        
        while (!q.empty()) {
            auto [r, c] = q.front();
            q.pop();
            
            // Check if we reached bottom row
            if (r == row - 1) {
                return true;
            }
            
            // Explore neighbors
            for (auto&amp; dir : directions) {
                int nr = r + dir[0];
                int nc = c + dir[1];
                
                if (nr &gt;= 0 &amp;&amp; nr &lt; row &amp;&amp; nc &gt;= 0 &amp;&amp; nc &lt; col 
                    &amp;&amp; !visited[nr][nc] &amp;&amp; grid[nr][nc] == 0) {
                    visited[nr][nc] = true;
                    q.push({nr, nc});
                }
            }
        }
        
        return false;
    }
};</code></pre>
