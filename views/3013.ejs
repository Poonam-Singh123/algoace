        <div class="code-container">
            <button class="copy-button" onclick="copyCode(this)">Copy Code</button>
            <pre><code class="language-cpp">class Solution {
public:
    long long minimumCost(vector&lt;int&gt;&amp; nums, int k, int dist) {
        int n = nums.size();
        long long result = LLONG_MAX;
        
        // First subarray always starts at index 0
        long long cost = nums[0];
        
        // We need to select k-1 more starting indices from range [1, n-1]
        // such that the last index - first index &lt;= dist
        
        // Use multiset to maintain k-1 smallest values in sliding window
        multiset&lt;int&gt; selected;
        multiset&lt;int&gt; candidates;
        long long selectedSum = 0;
        
        // Initialize window [1, min(1+dist, n-1)]
        for (int i = 1; i &lt;= min(1 + dist, n - 1); i++) {
            if (selected.size() &lt; k - 1) {
                selected.insert(nums[i]);
                selectedSum += nums[i];
            } else {
                candidates.insert(nums[i]);
            }
        }
        
        // Balance selected and candidates
        while (!candidates.empty() &amp;&amp; !selected.empty() &amp;&amp; 
               *candidates.begin() &lt; *selected.rbegin()) {
            int maxSelected = *selected.rbegin();
            int minCandidate = *candidates.begin();
            
            selected.erase(selected.find(maxSelected));
            selectedSum -= maxSelected;
            candidates.erase(candidates.begin());
            
            selected.insert(minCandidate);
            selectedSum += minCandidate;
            candidates.insert(maxSelected);
        }
        
        result = cost + selectedSum;
        
        // Slide the window
        for (int i = 2; i &lt; n; i++) {
            int removeIdx = i - 1;
            int addIdx = min(i + dist, n - 1);
            
            // Remove element at removeIdx
            if (selected.count(nums[removeIdx])) {
                selected.erase(selected.find(nums[removeIdx]));
                selectedSum -= nums[removeIdx];
                
                // Move smallest from candidates to selected if available
                if (!candidates.empty()) {
                    int minCandidate = *candidates.begin();
                    candidates.erase(candidates.begin());
                    selected.insert(minCandidate);
                    selectedSum += minCandidate;
                }
            } else {
                candidates.erase(candidates.find(nums[removeIdx]));
            }
            
            // Add element at addIdx if within bounds
            if (addIdx &lt; n &amp;&amp; addIdx &gt; i + dist - 1) {
                if (selected.size() &lt; k - 1) {
                    selected.insert(nums[addIdx]);
                    selectedSum += nums[addIdx];
                } else if (nums[addIdx] &lt; *selected.rbegin()) {
                    int maxSelected = *selected.rbegin();
                    selected.erase(selected.find(maxSelected));
                    selectedSum -= maxSelected;
                    
                    selected.insert(nums[addIdx]);
                    selectedSum += nums[addIdx];
                    candidates.insert(maxSelected);
                } else {
                    candidates.insert(nums[addIdx]);
                }
            }
            
            if (selected.size() == k - 1) {
                result = min(result, cost + selectedSum);
            }
        }
        
        return result;
    }
};</code></pre>
